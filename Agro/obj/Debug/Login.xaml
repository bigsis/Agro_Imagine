<Page
    x:Class="Agro.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Agro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="{ThemeResource PhoneForegroundColor}"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>



        <TextBlock 
            x:Name="AppName" 
            Text="Agro" 
            Margin="20,0,20,18.5" 
            Foreground="Black"
            Grid.Row="0"
            Style="{ThemeResource HeaderTextBlockStyle}" 
            SelectionHighlightColor="{ThemeResource ApplicationForegroundThemeBrush}" Grid.ColumnSpan="3"/>

        <TextBlock
            x:Name="Title"
            Text="ลงชื่อเข้าใช้"
            Foreground="Black" 
            FontSize="{StaticResource TextStyleExtraExtraLargeFontSize}" Grid.ColumnSpan="3" Margin="0,0.5,0,54.083" Grid.RowSpan="2" Grid.Row="1" 
            />

        <TextBlock
            x:Name="idBlock"
            Text="ID"
            Foreground="Black"
            Grid.Row="2" 
            FontSize="{StaticResource TextStyleExtraLargeFontSize}" VerticalAlignment="Bottom" FontWeight="Bold" Grid.ColumnSpan="3" Margin="0,0,0,53.083" Grid.RowSpan="2" 
            />

        <TextBox 
            x:Name="idBox"
            Grid.Row="3" 
            VerticalAlignment="Stretch" 
            BorderBrush="Black" 
            FontSize="{StaticResource TextStyleExtraLargeFontSize}" Grid.ColumnSpan="3" Margin="0,9.917,0,9.083"
            />

        <TextBlock
            x:Name="passBlock"
            Text="PASSWORD"
            Foreground="Black"
            Grid.Row="4" 
            FontSize="{StaticResource TextStyleExtraLargeFontSize}" VerticalAlignment="Bottom" FontWeight="Bold" Grid.ColumnSpan="3" Margin="0,0,0,53.667" Grid.RowSpan="2" 
            />

        <PasswordBox 
            x:Name="passBox"
            Grid.Row="5" 
            VerticalAlignment="Stretch" 
            BorderBrush="Black" 
            FontSize="{StaticResource TextStyleExtraLargeFontSize}" Grid.ColumnSpan="3" Margin="0,9.125,0,9.667"
            />

        <Button 
            x:Name="loginBtn"
            Grid.Row="5"
            Content="ลงชื่อเข้าใช้"
            Foreground="#FF0C0C0C" HorizontalAlignment="Stretch" BorderBrush="Black" Grid.ColumnSpan="3" Margin="0,53.125,0,53.833" Grid.RowSpan="3" 
            />

        <Button 
            x:Name="forgetBtn"
            Grid.Row="7"
            Content="ลืมรหัสผ่าน"
            Foreground="#FF0C0C0C" HorizontalAlignment="Stretch" BorderBrush="Black" Grid.ColumnSpan="3" Margin="0,53.333,0,53" Grid.RowSpan="3" 
            />

        <Button 
            x:Name="signUpBtn"
            Grid.Row="8"
            Content="สมัครสมาชิก"
            Foreground="#FF0C0C0C" HorizontalAlignment="Stretch" BorderBrush="Black" Grid.ColumnSpan="3" Margin="0,54.167,0,53" Grid.RowSpan="3" 
            />
        <StackPanel Grid.Column="2" HorizontalAlignment="Left" Height="100" Margin="363.833,15.958,-258,0" Grid.Row="7" Grid.RowSpan="3" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Page>

